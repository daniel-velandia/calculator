<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn_calculator" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:radius">0dp</item>
        <item name="android:textSize">@dimen/text_sise</item>
    </style>


    <style name="btn_number" parent="btn_calculator">
        <item name="backgroundTint">@color/btn_background</item>
    </style>

    <style name="btn_operator" parent="btn_calculator" >
        <item name="backgroundTint">@color/gray_700</item>
    </style>

    <style name="btn_clear" parent="btn_calculator" >
        <item name="backgroundTint">@color/red_500</item>
    </style>

    <style name="btn_equal" parent="btn_calculator" >
        <item name="backgroundTint">@color/gray_800</item>
    </style>
</resources>